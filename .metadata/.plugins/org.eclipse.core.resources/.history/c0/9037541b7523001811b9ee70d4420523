package dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import entities.User;
import utils.StringUtils;

@Repository
public class UsersDAO {
	@Autowired
	private JdbcTemplate jdbcTemplate;
	@Autowired
	private StringUtils stringUtils;
	
	public int addItem(User objUser){
		String sql = "INSERT INTO users(firstname,lastname,email,password,class,grade,birthday,phone,role,created_at)"
				+ " VALUES(?,?,?,?,?,?,?,?,?,?)";
		int result = jdbcTemplate.update(sql,new Object[]{objUser.getFirstname(),objUser.getLastname(),objUser.getEmail(),
				stringUtils.md5(objUser.getPassword()),objUser.getClass(),objUser.getGrade(),objUser.getBirthday(),
				objUser.getPhone(),objUser.getRole(),objUser.getCreated_at()});
		return result;
	}

	public int checkEmailExist(String email) {
		String sql = "SELECT email FROM users WHERE email = ?";
		return jdbcTemplate.queryForObject(sql, new Object[]{email}, Integer.class);
	}
	
}
