package controller;

import java.sql.Timestamp;

import javax.validation.Valid;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import dao.UsersDAO;
import entities.User;

@Controller
public class AuthController {
	@Autowired
	private UsersDAO userDAO;
	@RequestMapping("/login")
	public String index(ModelMap modelMap){
		return "auth.clbtinhoc.index";
	}
	
	@RequestMapping("/register")
	public String register(){
		return "auth.clbtinhoc.register";
	}
	
	@RequestMapping(value="/register", method=RequestMethod.POST)
	public String register(@Valid @ModelAttribute("objUser") User user, BindingResult bindingResult){
		if(bindingResult.hasErrors()){
			return "auth.clbtinhoc.register";
		}
		if(userDAO.checkEmailExist(user.getEmail()) == 1){
			return "redirect:/register?msg=email-exist";
		}
		user.setCreated_at(new Timestamp(System.currentTimeMillis()));
		if(userDAO.addItem(user) == 1){
			return "redirect:/login?msg=register-success";
		}
		return "redirect:/login?msg=register-fail";
	}
}
