package dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import entities.User;
import utils.StringUtils;

@Repository
public class UsersDAO {
	@Autowired
	private JdbcTemplate jdbcTemplate;
	@Autowired
	private StringUtils stringUtils;
	
	public int addItem(User objUser){
		String sql = "INSERT INTO users(firstname,lastname,username,email,password,class,grade,birthday,phone,role,created_at)"
				+ " VALUES(?,?,?,?,?,?,?,?,?,?,?)";
		int result = jdbcTemplate.update(sql,new Object[]{objUser.getFirstname(),objUser.getLastname(),objUser.getUsername(),objUser.getEmail(),
				stringUtils.md5(objUser.getPassword()),objUser.getKlass(),objUser.getGrade(),objUser.getBirthday(),
				objUser.getPhone(),objUser.getRole(),objUser.getCreated_at()});
		return result;
	}

	public Integer checkUserExist(String username) {
		String sql = "SELECT COUNT(username) FROM users WHERE username = ?";
		return jdbcTemplate.queryForObject(sql, new Object[]{username}, Integer.class);
	}
	
}
